@model AlexaSkillProject.WebApp.Models.ViewModels.WordViewModel

<div class="outer">
    <div class="middle cover-container">

        <div class="inner cover">
            <div class="word-component">
                <h1 class="cover-heading">
                    <span class="word-title">@Html.DisplayFor(model => model.Word.WordName)</span>
                    <span class="word-partofspeech">@Html.DisplayFor(model => model.Word.PartOfSpeech)</span>
                </h1>
                <p class="lead word-definition">
                    @Html.DisplayFor(model => model.Word.Definition)
                </p>
                <p class="lead word-example">
                    <i class="fa fa-quote-left" aria-hidden="true"></i> @Html.DisplayFor(model => model.Word.Example) <i class="fa fa-quote-right" aria-hidden="true"></i>
                </p>
                @*<p class="lead">
                    <a href="#" class="btn btn-lg btn-default">Learn more</a>
                </p>*@
            </div>
        </div>

    </div>
</div>